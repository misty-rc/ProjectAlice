<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#99550000" />
            <stroke
                android:width="1dp"
                android:color="#99990000" />

            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="10dp" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <gradient
                android:angle="90"
                android:centerColor="#55881111"
                android:endColor="#99ff0000"
                android:startColor="#33552222"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#99990000"/>
            <stroke 
                android:width="1dp"
                android:color="#99ff0000"/>
            
            <corners 
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="10dp"/>
            
            <padding 
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            
            <gradient 
                android:angle="90"
                android:centerColor="#55aa1111"
                android:endColor="#ffff0000"
                android:startColor="#00000000"
                android:type="linear"/>
        </shape>
        
    </item>

</selector>